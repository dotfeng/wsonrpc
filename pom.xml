<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.apexes.wsonrpc</groupId>
	<artifactId>wsonrpc</artifactId>
	<version>1.0.0</version>

	<properties>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>

        <!-- tyrus -->
        <version.org.glassfish.tyrus>1.9</version.org.glassfish.tyrus>

		<!-- jackson -->
		<version.com.fasterxml.jackson.core>2.4.2</version.com.fasterxml.jackson.core>
		<version.com.fasterxml.jackson.module-jaxb-annotations>2.4.2</version.com.fasterxml.jackson.module-jaxb-annotations>

		<!-- gson -->
        <version.com.google.code.gson>2.3.1</version.com.google.code.gson>
        
		<!-- plugin -->
		<version.maven-compiler-plugin>3.1</version.maven-compiler-plugin>
        <version.maven-jar-plugin>2.4</version.maven-jar-plugin>
        <version.maven-source-plugin>2.2.1</version.maven-source-plugin>
	</properties>

	<dependencies>

        <!-- Client -->
		<!-- tyrus-client -->
		<dependency>
			<groupId>org.glassfish.tyrus.bundles</groupId>
			<artifactId>tyrus-standalone-client-jdk</artifactId>
			<version>${version.org.glassfish.tyrus}</version>
			<scope>provided</scope>
		</dependency>
		
		<!-- Server -->
		<!-- tyrus-server -->
        <dependency>
            <groupId>org.glassfish.tyrus</groupId>
            <artifactId>tyrus-server</artifactId>
            <version>${version.org.glassfish.tyrus}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.glassfish.tyrus</groupId>
            <artifactId>tyrus-container-grizzly-server</artifactId>
            <version>${version.org.glassfish.tyrus}</version>
            <scope>provided</scope>
        </dependency>

        <!-- Support -->
		<!-- jackson -->
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-core</artifactId>
			<version>${version.com.fasterxml.jackson.core}</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>${version.com.fasterxml.jackson.core}</version>
		</dependency>

		<!-- gson -->
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>${version.com.google.code.gson}</version>
        </dependency>
        
	</dependencies>
	
	<build>

        <plugins>
	       <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${version.maven-jar-plugin}</version>
                <configuration>
                    <finalName>wsonrpc-${project.version}</finalName>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                    <encoding>UTF-8</encoding>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>false</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>false</addDefaultSpecificationEntries>
                        </manifest>
                        <addMavenDescriptor>false</addMavenDescriptor>
                    </archive>
                </configuration>
                <executions>
                    <!-- client -->
                    <execution>
                        <id>wsonrpc-client</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <finalName>wsonrpc-client-${project.version}</finalName>
                            <archive>
                                <addMavenDescriptor>false</addMavenDescriptor>
                            </archive>
                            <excludes>
                                <exclude>**/service/**</exclude>            
                            </excludes>
                        </configuration>
                    </execution>
                    <!-- service -->
                    <execution>
                        <id>wsonrpc-service</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <finalName>wsonrpc-service-${project.version}</finalName>
                            <archive>
                                <addMavenDescriptor>false</addMavenDescriptor>
                            </archive>
                            <excludes>
                                <exclude>**/client/**</exclude>            
                            </excludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>${version.maven-source-plugin}</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                    <!-- client -->
                    <execution>
                        <id>wsonrpc-client</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <finalName>wsonrpc-client-${project.version}</finalName>
                            <archive>
                                <addMavenDescriptor>false</addMavenDescriptor>
                            </archive>
                            <excludes>
                                <exclude>**/service/**</exclude>            
                            </excludes>
                        </configuration>
                    </execution>
                    <!-- service -->
                    <execution>
                        <id>wsonrpc-service</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <finalName>wsonrpc-service-${project.version}</finalName>
                            <archive>
                                <addMavenDescriptor>false</addMavenDescriptor>
                            </archive>
                            <excludes>
                                <exclude>**/client/**</exclude>            
                            </excludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
        </plugins>
    </build>
</project>