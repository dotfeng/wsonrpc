<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.apexes</groupId>
		<artifactId>apexes-root</artifactId>
		<version>0.0.1</version>
	</parent>
	<groupId>net.apexes.wsonrpc</groupId>
	<artifactId>wsonrpc</artifactId>
	<version>0.6.0</version>
	<name>wsonrpc</name>
	<description>JSON-RPC over websocket</description>
	<url>http://git.oschina.net/apexes/wsonrpc</url>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<name>hedyn</name>
			<email>hedyn@foxmail.com</email>
		</developer>
	</developers>

	<scm>
		<connection>scm:git:git@git.oschina.net:apexes/wsonrpc.git</connection>
		<developerConnection>scm:git:git@git.oschina.net:apexes/wsonrpc.git</developerConnection>
		<url>git@git.oschina.net:apexes/wsonrpc.git</url>
	</scm>

	<properties>
		<!-- tyrus -->
		<version.org.glassfish.tyrus>1.13</version.org.glassfish.tyrus>

		<!-- Java-WebSocket -->
		<version.org.java-websocket>1.3.0</version.org.java-websocket>

		<!-- jackson -->
		<version.com.fasterxml.jackson.core>2.8.0</version.com.fasterxml.jackson.core>

		<!-- gson -->
		<version.com.google.code.gson>2.7</version.com.google.code.gson>

		<!-- springframework -->
		<version.org.springframework>4.3.1.RELEASE</version.org.springframework>
	</properties>

	<dependencies>

		<!-- tyrus-client -->
		<dependency>
			<groupId>org.glassfish.tyrus.bundles</groupId>
			<artifactId>tyrus-standalone-client-jdk</artifactId>
			<version>${version.org.glassfish.tyrus}</version>
		</dependency>

		<!-- Java-WebSocket -->
		<dependency>
			<groupId>org.java-websocket</groupId>
			<artifactId>Java-WebSocket</artifactId>
			<version>${version.org.java-websocket}</version>
		</dependency>

		<!-- jackson -->
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>${version.com.fasterxml.jackson.core}</version>
		</dependency>

		<!-- gson -->
		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<version>${version.com.google.code.gson}</version>
		</dependency>

		<!-- tyrus-server -->
		<dependency>
			<groupId>org.glassfish.tyrus</groupId>
			<artifactId>tyrus-server</artifactId>
			<version>${version.org.glassfish.tyrus}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.glassfish.tyrus</groupId>
			<artifactId>tyrus-container-grizzly-server</artifactId>
			<version>${version.org.glassfish.tyrus}</version>
			<scope>provided</scope>
		</dependency>

		<!-- springframework -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-websocket</artifactId>
			<version>${version.org.springframework}</version>
			<scope>provided</scope>
		</dependency>

	</dependencies>

</project>